{
    "name": "voice-clock",
    "productName": "VoiceClock",
    "description": "Voice clock app for voice notification of the current time",
    "version": "0.2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/GrafSoul/voice-clock.git"
    },
    "author": "Dmitriy Zatulovskiy <grafsoul@gmail.com> (https://networkroom.ru)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/GrafSoul/voice-clock/issues"
    },
    "private": true,
    "main": "public/electron.js",
    "homepage": "./",
    "dependencies": {
        "electron-is-dev": "^2.0.0",
        "electron-window-state": "^5.0.3",
        "moment": "^2.30.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-scripts": "5.0.1"
    },
    "devDependencies": {
        "@electron/rebuild": "^3.6.2",
        "concurrently": "^9.1.0",
        "cross-env": "^7.0.3",
        "electron": "^33.2.1",
        "electron-builder": "^25.1.8",
        "electron-devtools-installer": "^3.2.0",
        "electron-reload": "^2.0.0-alpha.1",
        "sass": "^1.82.0",
        "wait-on": "^8.0.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "electron": "electron .",
        "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
        "electron-pack": "npm run build && electron-builder build -c.extraMetadata.main=build/electron.js",
        "electron-pack-mac": "npm run build && electron-builder build --mac -c.extraMetadata.main=build/electron.js",
        "electron-pack-win": "npm run build && electron-builder build --win -c.extraMetadata.main=build/electron.js",
        "electron-pack-linux": "npm run build && electron-builder build --linux -c.extraMetadata.main=build/electron.js",
        "release": "npm run build && electron-builder build --mac --win --linux"
    },
    "eslintConfig": {
        "extends": [
            "react-app"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "build": {
        "appId": "com.grafsoul.voiceclock",
        "productName": "VoiceClock",
        "copyright": "Copyright Â© 2025 GrafSoul",
        "files": [
            "build/**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "mac": {
            "category": "public.app-category.utilities",
            "icon": "assets/icon.icns",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "entitlements.mac.plist",
            "entitlementsInherit": "entitlements.mac.plist"
        },
        "win": {
            "icon": "assets/icon.ico",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "linux": {
            "icon": "assets/icons",
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Utility"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}
